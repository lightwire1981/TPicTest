<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

<!--    Home Button Text Style    -->
    <style name="HomeButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

<!--    Home Button Style   -->
    <style name="HomeButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="minHeight">-10dp</item>
        <item name="minWidth">-10dp</item>
    </style>
    <style name="HomeButtonLayout">
        <item name="android:padding">10dp</item>
    </style>

<!--    Main Category Text Style    -->
    <style name="HomeCategoryTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainCategoryRankingButtonTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="FragmentTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>




<!--    Main Custom List Item Text Style    -->
    <style name="MainCustomItemTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainRankingItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainNewItemTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainNewItemTagTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainMoreInfoTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainCompanyInfoTextStyle">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyPageMainButtonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyChildOrderTextStyle">
        <item name="android:textColor">#CC4747</item>
    </style>
    <style name="MyChildNickNormalStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#CC4747</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyChildNickFocusStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SelectTextNormalStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SelectTextFocusStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="CategoryCheckBoxNormalStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CategoryCheckBoxFocusStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF2929</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="DialogContentTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyChildTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyChildEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1C1C1C</item>
        <item name="android:textStyle">bold</item>
    </style>



<!--    Layout Style    -->
    <style name="temp">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>